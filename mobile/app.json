{
  "expo": {
    "name": "ScratchIQ",
    "slug": "scratchiq",
    "scheme": "scratchiq",
    "version": "1.0.0",
    "orientation": "default",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "runtimeVersion": "1.0.0",
    "icon": "./assets/app-icon.png",
    "splash": {
      "image": "./assets/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "eas": {
        "projectId": "a1b2c3d4-e5f6-47a8-9b1c-2d3e4f5a6b7c"
      }
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.scratchiq.app",
      "buildNumber": "2",
      "icon": "./assets/app-icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "ScratchIQ needs camera access to scan lottery ticket displays and identify available games.",
        "NSPhotoLibraryUsageDescription": "ScratchIQ needs photo library access to analyze images of lottery ticket displays you've already captured.",
        "NSUserNotificationsUsageDescription": "ScratchIQ sends notifications when high-value lottery tickets become available in your area.",
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationQueriesSchemes": [
          "tiktok",
          "instagram"
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.scratchiq.app",
      "versionCode": 1,
      "icon": "./assets/app-icon.png",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-icon.png",
        "backgroundColor": "#6366f1"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "ScratchIQ needs camera access to scan lottery ticket displays and identify available games."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "ScratchIQ needs photo library access to analyze images of lottery ticket displays you've already captured."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1"
        }
      ]
    ]
  }
}
